@using AlısVerisSepeti.Mvc.Models
@{
    ViewBag.Title = "Musteri Listesi";
}
@model IEnumerable<Musteri>
<h2>Müşteri Listesi</h2>

<table class="table table-striped">

    <thead>
        <tr>
            <th>Musteri Adı</th>
            <th>Musteri Soyadı</th>
            <th>Sehir</th>
            <th>İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MusteriAd</td>
                <td>@item.MusteriSoyad</td>
                <td>@item.Sehir</td>


                <td>

                    <a href="/Admin/Musteri/MusteriGuncelle/@item.MusteriId" class="btn btn-sm btn-primary">Guncelle</a>
                    <a href="/Admin/Musteri/MusteriSil/@item.MusteriId" class="btn btn-danger" onclick="return confirm('Bu kişiyi silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }


    </tbody>

</table>
